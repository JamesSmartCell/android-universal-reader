<!-- res/xml/apduservice.xml -->
<host-apdu-service xmlns:android="http://schemas.android.com/apk/res/android"
    android:description="@string/hce_service_description"
    android:requireDeviceUnlock="false">
    <!--
        Register the NDEF Tag Application AID.
        This allows NFC readers looking for NDEF tags to discover your HCE service.
    -->
    <aid-group android:description="@string/ndef_tag_application_aid_group"
        android:category="other">
        <aid-filter android:name="D2760000850101"/> <!-- NDEF Tag Application AID (Type 4 Tag v1.0 / v2.0) -->
        <!-- You could add other AIDs if your service supports them -->
    </aid-group>
</host-apdu-service>